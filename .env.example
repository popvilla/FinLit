# Port for the MCP server to listen on
PORT=3000

# API Key for agents to authenticate with THIS MCP server
MCP_API_KEY=your_mcp_secret_key_here

# Base URL for the Obsidian Local REST API plugin
# If Obsidian is on the same machine as MCP (not in Docker): https://127.0.0.1:27124
# If Obsidian is on the host machine and MCP is in Docker (Mac/Windows): https://host.docker.internal:27124
# If both Obsidian and MCP are in Docker (via docker-compose): https://obsidian-service-name:27124
OBSIDIAN_BASE_URL=https://127.0.0.1:27124

# API Key generated from the Obsidian Local REST API plugin settings
OBSIDIAN_API_KEY=your_obsidian_plugin_api_key_here

# Logging level for the MCP server (debug, info, warn, error)
MCP_LOG_LEVEL=info
